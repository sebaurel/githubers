<?xml version="1.0" encoding="UTF-8"?>
<project name="githubtracker" default="all">
  
  
  <property file="githubtracker.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.egg"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.swc"/>
    <include name="*.war"/>
    <include name="*.zip"/>
    <include name="*.ane"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="lib/ant-javafx.jar"/>
      <include name="lib/dt.jar"/>
      <include name="lib/javafx-mx.jar"/>
      <include name="lib/jconsole.jar"/>
      <include name="lib/packager.jar"/>
      <include name="lib/sa-jdi.jar"/>
      <include name="lib/tools.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.maven:_com.fasterxml.jackson.core:jackson-annotations:2.9.0.classpath">
    <pathelement location="${path.variable.maven_repository}/com/fasterxml/jackson/core/jackson-annotations/2.9.0/jackson-annotations-2.9.0.jar"/>
  </path>
  
  <path id="library.maven:_com.fasterxml.jackson.core:jackson-core:2.9.5.classpath">
    <pathelement location="${path.variable.maven_repository}/com/fasterxml/jackson/core/jackson-core/2.9.5/jackson-core-2.9.5.jar"/>
  </path>
  
  <path id="library.maven:_com.fasterxml.jackson.core:jackson-databind:2.9.5.classpath">
    <pathelement location="${path.variable.maven_repository}/com/fasterxml/jackson/core/jackson-databind/2.9.5/jackson-databind-2.9.5.jar"/>
  </path>
  
  <path id="library.maven:_com.google.code.gson:gson:2.2.4.classpath">
    <pathelement location="${path.variable.maven_repository}/com/google/code/gson/gson/2.2.4/gson-2.2.4.jar"/>
  </path>
  
  <path id="library.maven:_com.stripe:stripe-java:1.8.0.classpath">
    <pathelement location="${path.variable.maven_repository}/com/stripe/stripe-java/1.8.0/stripe-java-1.8.0.jar"/>
  </path>
  
  <path id="library.maven:_javax.el:javax.el-api:3.0.0.classpath">
    <pathelement location="${path.variable.maven_repository}/javax/el/javax.el-api/3.0.0/javax.el-api-3.0.0.jar"/>
  </path>
  
  <path id="library.maven:_javax.enterprise:cdi-api:2.0.classpath">
    <pathelement location="${path.variable.maven_repository}/javax/enterprise/cdi-api/2.0/cdi-api-2.0.jar"/>
  </path>
  
  <path id="library.maven:_javax.inject:javax.inject:1.classpath">
    <pathelement location="${path.variable.maven_repository}/javax/inject/javax.inject/1/javax.inject-1.jar"/>
  </path>
  
  <path id="library.maven:_javax.interceptor:javax.interceptor-api:1.2.classpath">
    <pathelement location="${path.variable.maven_repository}/javax/interceptor/javax.interceptor-api/1.2/javax.interceptor-api-1.2.jar"/>
  </path>
  
  <path id="library.maven:_javax.servlet:javax.servlet-api:4.0.0.classpath">
    <pathelement location="${path.variable.maven_repository}/javax/servlet/javax.servlet-api/4.0.0/javax.servlet-api-4.0.0.jar"/>
  </path>
  
  <path id="library.maven:_javax.servlet:jstl:1.2.classpath">
    <pathelement location="${path.variable.maven_repository}/javax/servlet/jstl/1.2/jstl-1.2.jar"/>
  </path>
  
  
  <!-- Application Server Libraries -->
  
  <path id="library.glassfish_5.181.0_-_bean_validation.classpath">
    <pathelement location="/Users/sebastien/Applications/glassfish5/glassfish/modules/bean-validator-cdi.jar"/>
    <pathelement location="/Users/sebastien/Applications/glassfish5/glassfish/modules/bean-validator.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="jgoodies-forms.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_githubtracker.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.githubtracker, clean.artifact.githubtracker:war_exploded" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.githubtracker" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.githubtracker:war" value="${basedir}/classes/artifacts/GithubTracker_war"/>
    <property name="artifact.output.githubtracker:war_exploded" value="${basedir}/classes/artifacts/GithubTracker_war_exploded"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.GithubTracker_war.war" value="${artifacts.temp.dir}/GithubTracker_war.war"/>
  </target>
  
  <target name="clean.artifact.githubtracker:war_exploded" description="clean GithubTracker:war exploded artifact output">
    <delete dir="${artifact.output.githubtracker:war_exploded}"/>
  </target>
  
  <target name="artifact.githubtracker:war" depends="init.artifacts, artifact.githubtracker:war_exploded" description="Build &#39;GithubTracker:war&#39; artifact">
    <property name="artifact.temp.output.githubtracker:war" value="${artifacts.temp.dir}/GithubTracker_war"/>
    <mkdir dir="${artifact.temp.output.githubtracker:war}"/>
    <zip destfile="${temp.jar.path.GithubTracker_war.war}">
      <zipfileset dir="${artifact.output.githubtracker:war_exploded}"/>
    </zip>
    <copy file="${temp.jar.path.GithubTracker_war.war}" tofile="${artifact.temp.output.githubtracker:war}/GithubTracker_war.war"/>
  </target>
  
  <target name="artifact.githubtracker:war_exploded" depends="init.artifacts, compile.module.githubtracker" description="Build &#39;GithubTracker:war exploded&#39; artifact">
    <mkdir dir="${artifact.output.githubtracker:war_exploded}"/>
    <mkdir dir="${artifact.output.githubtracker:war_exploded}/WEB-INF"/>
    <mkdir dir="${artifact.output.githubtracker:war_exploded}/WEB-INF/classes"/>
    <copy todir="${artifact.output.githubtracker:war_exploded}/WEB-INF/classes">
      <fileset dir="${githubtracker.output.dir}"/>
    </copy>
    <mkdir dir="${artifact.output.githubtracker:war_exploded}/WEB-INF/lib"/>
    <copy file="${path.variable.maven_repository}/javax/servlet/jstl/1.2/jstl-1.2.jar" tofile="${artifact.output.githubtracker:war_exploded}/WEB-INF/lib/jstl-1.2.jar"/>
    <copy file="${path.variable.maven_repository}/com/stripe/stripe-java/1.8.0/stripe-java-1.8.0.jar" tofile="${artifact.output.githubtracker:war_exploded}/WEB-INF/lib/stripe-java-1.8.0.jar"/>
    <copy file="${path.variable.maven_repository}/com/google/code/gson/gson/2.2.4/gson-2.2.4.jar" tofile="${artifact.output.githubtracker:war_exploded}/WEB-INF/lib/gson-2.2.4.jar"/>
    <copy file="${path.variable.maven_repository}/javax/servlet/javax.servlet-api/4.0.0/javax.servlet-api-4.0.0.jar" tofile="${artifact.output.githubtracker:war_exploded}/WEB-INF/lib/javax.servlet-api-4.0.0.jar"/>
    <copy todir="${artifact.output.githubtracker:war_exploded}">
      <fileset dir="${basedir}/web"/>
    </copy>
    <mkdir dir="${artifact.output.githubtracker:war_exploded}/WEB-INF"/>
    <copy file="${basedir}/web/WEB-INF/web.xml" tofile="${artifact.output.githubtracker:war_exploded}/WEB-INF/web.xml"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.githubtracker:war, artifact.githubtracker:war_exploded" description="Build all artifacts">
    <mkdir dir="${artifact.output.githubtracker:war}"/>
    <copy todir="${artifact.output.githubtracker:war}">
      <fileset dir="${artifact.temp.output.githubtracker:war}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>