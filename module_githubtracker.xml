<?xml version="1.0" encoding="UTF-8"?>
<project name="module_githubtracker" default="compile.module.githubtracker">
  <dirname property="module.githubtracker.basedir" file="${ant.file.module_githubtracker}"/>
  
  <property name="module.jdk.home.githubtracker" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.githubtracker" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.githubtracker" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.githubtracker" value="-encoding UTF-8 -source 8 -target 1.8 ${compiler.args}"/>
  
  <property name="githubtracker.output.dir" value="${module.githubtracker.basedir}/target/classes"/>
  <property name="githubtracker.testoutput.dir" value="${module.githubtracker.basedir}/target/test-classes"/>
  
  <path id="githubtracker.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="githubtracker.module.production.classpath">
    <path refid="${module.jdk.classpath.githubtracker}"/>
    <path refid="library.glassfish_5.181.0_-_bean_validation.classpath"/>
    <path refid="library.maven:_javax.servlet:javax.servlet-api:4.0.0.classpath"/>
    <path refid="library.maven:_javax.servlet:jstl:1.2.classpath"/>
    <path refid="library.maven:_com.stripe:stripe-java:1.8.0.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.2.4.classpath"/>
    <path refid="library.maven:_javax.inject:javax.inject:1.classpath"/>
    <path refid="library.maven:_javax.enterprise:cdi-api:2.0.classpath"/>
    <path refid="library.maven:_javax.el:javax.el-api:3.0.0.classpath"/>
    <path refid="library.maven:_javax.interceptor:javax.interceptor-api:1.2.classpath"/>
    <path refid="library.maven:_com.fasterxml.jackson.core:jackson-databind:2.9.5.classpath"/>
    <path refid="library.maven:_com.fasterxml.jackson.core:jackson-annotations:2.9.0.classpath"/>
    <path refid="library.maven:_com.fasterxml.jackson.core:jackson-core:2.9.5.classpath"/>
  </path>
  
  <path id="githubtracker.runtime.production.module.classpath">
    <pathelement location="${githubtracker.output.dir}"/>
    <path refid="library.maven:_javax.servlet:javax.servlet-api:4.0.0.classpath"/>
    <path refid="library.maven:_javax.servlet:jstl:1.2.classpath"/>
    <path refid="library.maven:_com.stripe:stripe-java:1.8.0.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.2.4.classpath"/>
    <path refid="library.maven:_com.fasterxml.jackson.core:jackson-databind:2.9.5.classpath"/>
    <path refid="library.maven:_com.fasterxml.jackson.core:jackson-annotations:2.9.0.classpath"/>
    <path refid="library.maven:_com.fasterxml.jackson.core:jackson-core:2.9.5.classpath"/>
  </path>
  
  <path id="githubtracker.module.classpath">
    <path refid="${module.jdk.classpath.githubtracker}"/>
    <pathelement location="${githubtracker.output.dir}"/>
    <path refid="library.glassfish_5.181.0_-_bean_validation.classpath"/>
    <path refid="library.maven:_javax.servlet:javax.servlet-api:4.0.0.classpath"/>
    <path refid="library.maven:_javax.servlet:jstl:1.2.classpath"/>
    <path refid="library.maven:_com.stripe:stripe-java:1.8.0.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.2.4.classpath"/>
    <path refid="library.maven:_javax.inject:javax.inject:1.classpath"/>
    <path refid="library.maven:_javax.enterprise:cdi-api:2.0.classpath"/>
    <path refid="library.maven:_javax.el:javax.el-api:3.0.0.classpath"/>
    <path refid="library.maven:_javax.interceptor:javax.interceptor-api:1.2.classpath"/>
    <path refid="library.maven:_com.fasterxml.jackson.core:jackson-databind:2.9.5.classpath"/>
    <path refid="library.maven:_com.fasterxml.jackson.core:jackson-annotations:2.9.0.classpath"/>
    <path refid="library.maven:_com.fasterxml.jackson.core:jackson-core:2.9.5.classpath"/>
  </path>
  
  <path id="githubtracker.runtime.module.classpath">
    <pathelement location="${githubtracker.testoutput.dir}"/>
    <pathelement location="${githubtracker.output.dir}"/>
    <path refid="library.glassfish_5.181.0_-_bean_validation.classpath"/>
    <path refid="library.maven:_javax.servlet:javax.servlet-api:4.0.0.classpath"/>
    <path refid="library.maven:_javax.servlet:jstl:1.2.classpath"/>
    <path refid="library.maven:_com.stripe:stripe-java:1.8.0.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.2.4.classpath"/>
    <path refid="library.maven:_javax.inject:javax.inject:1.classpath"/>
    <path refid="library.maven:_javax.enterprise:cdi-api:2.0.classpath"/>
    <path refid="library.maven:_javax.el:javax.el-api:3.0.0.classpath"/>
    <path refid="library.maven:_javax.interceptor:javax.interceptor-api:1.2.classpath"/>
    <path refid="library.maven:_com.fasterxml.jackson.core:jackson-databind:2.9.5.classpath"/>
    <path refid="library.maven:_com.fasterxml.jackson.core:jackson-annotations:2.9.0.classpath"/>
    <path refid="library.maven:_com.fasterxml.jackson.core:jackson-core:2.9.5.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.githubtracker">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.githubtracker">
    <patternset refid="excluded.from.module.githubtracker"/>
  </patternset>
  
  <path id="githubtracker.module.sourcepath">
    <dirset dir="${module.githubtracker.basedir}">
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.githubtracker" depends="compile.module.githubtracker.production,compile.module.githubtracker.tests" description="Compile module GithubTracker"/>
  
  <target name="compile.module.githubtracker.production" depends="register.custom.compilers" description="Compile module GithubTracker; production classes">
    <mkdir dir="${githubtracker.output.dir}"/>
    <javac2 destdir="${githubtracker.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.githubtracker}/javac">
      <compilerarg line="${compiler.args.githubtracker}"/>
      <bootclasspath refid="githubtracker.module.bootclasspath"/>
      <classpath refid="githubtracker.module.production.classpath"/>
      <src refid="githubtracker.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.githubtracker"/>
    </javac2>
    
    <copy todir="${githubtracker.output.dir}">
      <fileset dir="${module.githubtracker.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.githubtracker.tests" depends="register.custom.compilers,compile.module.githubtracker.production" description="compile module GithubTracker; test classes" unless="skip.tests"/>
  
  <target name="clean.module.githubtracker" description="cleanup module">
    <delete dir="${githubtracker.output.dir}"/>
    <delete dir="${githubtracker.testoutput.dir}"/>
  </target>
</project>